{
  "manifest_version": 3,
  "name": "AI WorkOS Capture",
  "version": "1.1",
  "description": "Capture work sessions, notes, and auto-generate AI reports",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
